// Experiment 1.
// ((a) Class student)
#include <iostream>
using namespace std;

class student {
    int roll_no;
    string name, cls;
public:
    void input() {
        cout << "Enter Roll No, Name and Class: ";
        cin >> roll_no >> name >> cls;
    }
    void display() {
        cout << "\nRoll No: " << roll_no;
        cout << "\nName: " << name;
        cout << "\nClass: " << cls << endl;
    }
};

int main() {
    student s;
    s.input();
    s.display();
    return 0;
}
//((b) Class Book)
#include <iostream>
using namespace std;

class Book {
    string book_name;
    float price;
    int pages;
public:
    void input() {
        cout << "Enter Book Name, Price and Pages: ";
        cin >> book_name >> price >> pages;
    }
    float getPrice() { return price; }
    string getName() { return book_name; }
};

int main() {
    Book b1, b2;
    b1.input();
    b2.input();
    if (b1.getPrice() > b2.getPrice())
        cout << "\nBook with higher price: " << b1.getName();
    else
        cout << "\nBook with higher price: " << b2.getName();
    return 0;
}
//((c) Class time)
#include <iostream>
using namespace std;

class time {
    int h, m, s;
public:
    void input() {
        cout << "Enter time (HH MM SS): ";
        cin >> h >> m >> s;
    }
    void displaySeconds() {
        int total = h * 3600 + m * 60 + s;
        cout << "\nTotal seconds = " << total;
    }
};

int main() {
    time t;
    t.input();
    t.displaySeconds();
    return 0;
}


//Experiment 2
//((a) Class city)
#include <iostream>
using namespace std;

class city {
    string name;
    int pop;
public:
    void input() {
        cout << "Enter city name and population: ";
        cin >> name >> pop;
    }
    int getPop() { return pop; }
    string getName() { return name; }
};

int main() {
    city c[5];
    for(int i=0;i<5;i++) c[i].input();

    int max = 0;
    for(int i=1;i<5;i++)
        if(c[i].getPop() > c[max].getPop())
            max = i;

    cout << "\nCity with highest population: " << c[max].getName();
    return 0;
}
//((b) Class Account)
#include <iostream>
using namespace std;

class Account {
    int acc_no;
    float bal;
public:
    void input() {
        cout << "Enter Account No and Balance: ";
        cin >> acc_no >> bal;
    }
    void update() {
        if(bal >= 5000) bal += bal * 0.10;
    }
    void display() {
        cout << "Account No: " << acc_no << "  Balance: " << bal << endl;
    }
};

int main() {
    Account a[10];
    for(int i=0;i<10;i++) a[i].input();
    cout << "\nAccounts with updated balances:\n";
    for(int i=0;i<10;i++) {
        a[i].update();
        a[i].display();
    }
    return 0;
}
//((c) Class Staff)
#include <iostream>
using namespace std;

class Staff {
    string name, post;
public:
    void input() {
        cout << "Enter Staff Name and Post: ";
        cin >> name >> post;
    }
    void showIfHOD() {
        if(post == "HOD")
            cout << name << endl;
    }
};

int main() {
    Staff s[5];
    for(int i=0;i<5;i++) s[i].input();

    cout << "\nStaff with post 'HOD':\n";
    for(int i=0;i<5;i++) s[i].showIfHOD();

    return 0;
}


//Experiment 3
//((a) Pointer to object)
#include <iostream>
using namespace std;

class Book {
    string title, author;
    float price;
public:
    void input() {
        cout << "Enter Title, Author and Price: ";
        cin >> title >> author >> price;
    }
    void display() {
        cout << "\nTitle: " << title;
        cout << "\nAuthor: " << author;
        cout << "\nPrice: " << price << endl;
    }
};

int main() {
    Book b, *ptr;
    ptr = &b;
    ptr->input();
    ptr->display();
    return 0;
}
//((b) Using this pointer)
#include <iostream>
using namespace std;

class Student {
    int roll_no;
    float per;
public:
    void input(int r, float p) {
        this->roll_no = r;
        this->per = p;
    }
    void display() {
        cout << "Roll No: " << this->roll_no;
        cout << "\nPercentage: " << this->per << endl;
    }
};

int main() {
    Student s;
    int r; float p;
    cout << "Enter Roll No and Percentage: ";
    cin >> r >> p;
    s.input(r, p);
    s.display();
    return 0;
}
//((c) Nested class)
#include <iostream>
using namespace std;

class Outer {
public:
    class Inner {
    public:
        void show() {
            cout << "This is a Nested Class Example!";
        }
    };
};

int main() {
    Outer::Inner obj;
    obj.show();
    return 0;
}


//Experiment 4
//((a) Passing object as function argument)
#include <iostream>
using namespace std;

class Result {
    float marks;
public:
    void get() {
        cout << "Enter marks: ";
        cin >> marks;
    }
    float getMarks() { return marks; }
};

void average(Result r1, Result r2) {
    float avg = (r1.getMarks() + r2.getMarks()) / 2;
    cout << "\nAverage Marks = " << avg;
}

int main() {
    Result r1, r2;
    r1.get();
    r2.get();
    average(r1, r2);
    return 0;
}
//((b) Friend function to find greatest number)
#include <iostream>
using namespace std;

class B; // forward declaration

class A {
    int x;
public:
    void get() {
        cout << "Enter number for A: ";
        cin >> x;
    }
    friend void greatest(A, B);
};

class B {
    int y;
public:
    void get() {
        cout << "Enter number for B: ";
        cin >> y;
    }
    friend void greatest(A, B);
};

void greatest(A a, B b) {
    if(a.x > b.y)
        cout << "\nA is greater: " << a.x;
    else
        cout << "\nB is greater: " << b.y;
}

int main() {
    A a;
    B b;
    a.get();
    b.get();
    greatest(a, b);
    return 0;
}
//((c) Friend function to swap contents of two objects)
#include <iostream>
using namespace std;

class Sample {
    int val;
public:
    void get() {
        cout << "Enter value: ";
        cin >> val;
    }
    void show() {
        cout << val << endl;
    }
    friend void swapValues(Sample &, Sample &);
};

void swapValues(Sample &s1, Sample &s2) {
    int temp = s1.val;
    s1.val = s2.val;
    s2.val = temp;
}

int main() {
    Sample s1, s2;
    cout << "Enter first object: "; s1.get();
    cout << "Enter second object: "; s2.get();

    cout << "\nBefore Swap:\n";
    s1.show(); s2.show();

    swapValues(s1, s2);

    cout << "\nAfter Swap:\n";
    s1.show(); s2.show();

    return 0;
}


//Experiment 5
//((a) Parameterized constructor — Sum from 1 to n)
#include <iostream>
using namespace std;

class Sum {
    int n, s;
public:
    Sum(int num) {
        n = num;
        s = n * (n + 1) / 2;
    }
    void show() {
        cout << "Sum = " << s;
    }
};

int main() {
    int n;
    cout << "Enter n: ";
    cin >> n;
    Sum obj(n);
    obj.show();
    return 0;
}
